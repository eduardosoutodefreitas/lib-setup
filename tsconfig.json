{
  "compilerOptions": {
    "outDir": "dist", // Specifies the output directory for compiled JavaScript files
    "target": "ES6",
    "lib": ["dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "module": "CommonJS",
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [".d.ts", "**/*.ts", "**/*.tsx", "src/**/*", "./index.ts"],
  "exclude": ["node_modules", "babel.config.js", "dist"]
}
