{
  "compilerOptions": {
    "outDir": "dist", // Specifies the output directory for compiled JavaScript files
    "target": "ES6",
    "lib": ["ES6", "DOM"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./src/*"],
    },
    "inlineSourceMap": true
  },
  "include": [".d.ts", "**/*.ts", "**/*.tsx", "src/**/*", "src/index.js"],
  "exclude": ["node_modules", "babel.config.js", "dist"]
}
